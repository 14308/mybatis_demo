<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.DepartmentMapper">
    <resultMap id="BaseResultMap" type="com.example.demo.domain.Department">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="code" property="code"/>
        <result column="status" property="status"/>
        <result column="createdDate" property="createdDate"/>
    </resultMap>

    <select id="selectByUserId" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT
        *
        from atl_user user,atl_department department
        where
        user.departement_id = department.id AND
        user.id = #{id}
    </select>

    <select id="search" parameterType="java.lang.String" resultMap="BaseResultMap">
      SELECT
      *
      from atl_department
      where
      department_name like CONCAT(CONCAT('%', #{keyword}), '%');
    </select>

</mapper>